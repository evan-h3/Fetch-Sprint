{
  "expo": {
    "name": "Fetch Flips",
    "slug": "fetch-flips",
    "version": "1.0.0",
    "orientation": "portrait",
    "platforms": ["ios", "android"],
    "userInterfaceStyle": "light",
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.fetchflips.mobile"
    },
    "android": {
      "package": "com.fetchflips.mobile",
      "permissions": ["CAMERA", "READ_EXTERNAL_STORAGE", "WRITE_EXTERNAL_STORAGE"]
    },
    "scheme": "fetchflips",
    "plugins": [
      "expo-router",
      "expo-camera",
      "expo-image-picker",
      [
        "expo-av",
        {
          "microphonePermission": "Allow Fetch Flips to access your microphone for video recording."
        }
      ]
    ]
  }
}
